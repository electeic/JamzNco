<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <TextView
                android:id="@+id/viewSubscriptionInfo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:text="Subscribed to:"
                android:textSize="18sp" />

            <Button
                android:id="@+id/viewSubscriptionInfo_unsubscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="unsubscribe" />

            <TextView
                android:id="@+id/viewSubscriptionInfo__detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/viewSubscriptionInfo_title"
                android:layout_below="@+id/viewSubscriptionInfo_title"
                android:layout_marginTop="12dp"
                android:text="tag 1, tag 2, tag 3, tag 4, etc." />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
